# Gordon Configuration
# Copy this file to .env and fill in your API keys

# Required for AI capabilities
OPENAI_API_KEY=your-openai-api-key-here

# Required for financial data (get from financialdatasets.ai)
FINANCIAL_DATASETS_API_KEY=your-financial-datasets-api-key-here

# Optional - For live trading (Binance)
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_API_SECRET=your-binance-api-secret-here

# Optional - For other exchanges
BITFINEX_API_KEY=
BITFINEX_API_SECRET=

HYPERLIQUID_PRIVATE_KEY=

# Optional - Configuration
GORDON_BASE_POSITION_SIZE=0.01
GORDON_MAX_DRAWDOWN=0.1
GORDON_RISK_PER_TRADE=0.02

# Optional - For web search capabilities
GOOGLE_API_KEY=
GOOGLE_CSE_ID=